@model MyContact.Models.Contact
@{
    ViewBag.Title = "Create";
}


@Html.Partial("_sidebar")
<div class="col-md-9">

    @using (Html.BeginForm())
    {
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon">
                    <span><i class="glyphicon glyphicon-user"></i></span>
                </div>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name" })
                @Html.ValidationMessageFor(x => x.Name)


            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon">
                    <span><i class="glyphicon glyphicon-phone-alt"></i></span>
                </div>
                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", placeholder = "Phone" })
                @Html.ValidationMessageFor(x => x.PhoneNumber)
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon">
                    <span><i class="fa fa-envelope" aria-hidden="true"></i></span>
                </div>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(x => x.Email)
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon">
                    <span><i class="fa fa-address-book" aria-hidden="true"></i></span>
                </div>
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control", placeholder = "Address" })

            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon">
                    <span><i class="fa fa-birthday-cake" aria-hidden="true"></i></span>
                </div>
                @Html.TextBoxFor(x => x.Birthday, "{0:yyyy-MM-dd}", new { @class = "form-control", placeholder = "Birthday (yyyy-mm-dd)" })

            </div>
        </div>


        <button type="submit" class="btn btn-primary">Save</button>


    }


</div>

</div>